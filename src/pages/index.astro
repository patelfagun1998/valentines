---
import Layout from '../layouts/Layout.astro';
import { PasswordGateWrapper } from '../components/PasswordGateWrapper';
---

<Layout title="A Special Surprise">
  <PasswordGateWrapper client:load>
    <main class="min-h-screen flex items-center justify-center bg-gradient-to-br from-lavender/50 via-pink-soft/30 to-peach/50">
      <div class="text-center">
        <h1 class="text-5xl font-display text-text-dark mb-8">
          Welcome, Dhanushikka
        </h1>
        <p class="text-xl text-text-dark/70 font-body">
          You made it inside!
        </p>
        <p class="text-lg text-text-dark/50 font-body mt-4 italic">
          (Next step: Letter reveal page)
        </p>
      </div>
    </main>
  </PasswordGateWrapper>

  <!-- Dev reset button -->
  <button
    id="reset-btn"
    class="fixed bottom-4 right-4 bg-red-500/80 text-white text-xs px-3 py-1.5 rounded font-mono hover:bg-red-500 transition-colors"
  >
    Reset Auth (Dev)
  </button>

  <script>
    document.getElementById('reset-btn')?.addEventListener('click', () => {
      localStorage.removeItem('valentines_authenticated');
      window.location.reload();
    });
  </script>
</Layout>
